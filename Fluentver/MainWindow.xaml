<?xml version="1.0" encoding="utf-8"?>
<controls:SizeWindow
    x:Class="Fluentver.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fluentver"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:controls="using:Fluentver.Controls"
    mc:Ignorable="d"
    Title="Fluver" Width="480" Height="582" DoubleClickToMaximize="True">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <StackPanel>
        <TitleBar x:Name="titleBar" Title="Fluver" HorizontalAlignment="Stretch" Height="32" />
        <StackPanel Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center" VerticalAlignment="Top">
            <FontIcon x:Name="windowsLogo" FontFamily="{StaticResource WindowsLogos}" Glyph="&#xE911;" FontSize="40" />
            <TextBlock x:Name="windowsVersionText" Text="Windows" FontSize="40" Style="{ThemeResource TitleTextBlockStyle}" />
        </StackPanel>
        <NavigationView x:Name="RootNV" x:FieldModifier="public"
                        SelectedItem="{x:Bind About_NavItem}" SelectionChanged="RootNV_SelectionChanged"
                        PaneDisplayMode="Top" IsSettingsVisible="False"
                        IsBackButtonVisible="Collapsed" IsPaneToggleButtonVisible="False">
            <NavigationView.Resources>
                <SolidColorBrush x:Key="NavigationViewContentBackground" Color="Transparent" />
                <SolidColorBrush x:Key="NavigationViewContentGridBorderBrush" Color="Transparent" />
            </NavigationView.Resources>
            <NavigationView.MenuItems>
                <NavigationViewItem x:Name="About_NavItem"
                                    Icon="{ui:FontIcon Glyph=&#xE946;}" Content="About"
                                    ToolTipService.ToolTip="Windows specs and legal"
                                    controls:Accelerator.Ctrl="Number1" />
                <NavigationViewItem x:Name="PC_NavItem"
                                    Icon="{ui:FontIcon Glyph=&#xE7F4;}" Content="Your PC"
                                    ToolTipService.ToolTip="Your PC's info and specs"
                                    controls:Accelerator.Ctrl="Number2" />
                <NavigationViewItem x:Name="Users_NavItem"
                                    Icon="People" Content="Users"
                                    ToolTipService.ToolTip="Your info and other users"
                                    controls:Accelerator.Ctrl="Number3" />
                <NavigationViewItem x:Name="Storage_NavItem"
                                    Icon="{ui:FontIcon Glyph=&#xEDA2;}" Content="Storage"
                                    ToolTipService.ToolTip="List of your disks"
                                    controls:Accelerator.Ctrl="Number4" />
            </NavigationView.MenuItems>
            <Frame x:Name="ContentFrame" x:FieldModifier="public" />
        </NavigationView>
        <Grid>
            <Button Content="OK" Click="CloseWindow" HorizontalAlignment="Right" Margin="8" Style="{ThemeResource AccentButtonStyle}">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="Enter" />
                    <KeyboardAccelerator Key="Escape" />
                </Button.KeyboardAccelerators>
                <ToolTipService.ToolTip>
                    <ToolTip Visibility="Collapsed" />
                </ToolTipService.ToolTip>
            </Button>
            <StackPanel x:Name="toolbar" Margin="8,8,0,8" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Left">
                <StackPanel.ChildrenTransitions>
                    <TransitionCollection>
                        <RepositionThemeTransition />
                        <EntranceThemeTransition />
                    </TransitionCollection>
                </StackPanel.ChildrenTransitions>
            </StackPanel>
        </Grid>
        <StackPanel.ChildrenTransitions>
            <TransitionCollection>
                <RepositionThemeTransition IsStaggeringEnabled="False" />
            </TransitionCollection>
        </StackPanel.ChildrenTransitions>
    </StackPanel>
</controls:SizeWindow>
