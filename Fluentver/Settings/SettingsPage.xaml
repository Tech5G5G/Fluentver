<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Fluentver.Settings.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fluentver.Settings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d">

    <StackPanel Spacing="4" Padding="8,0,8,17">
        <controls:SettingsExpander HeaderIcon="{ui:FontIcon Glyph=&#xF2B7;}" Header="Language" Description="Change the display language of the application" IsExpanded="True">
            <ComboBox>
                <x:String>Windows (Default)</x:String>
                <x:String>English (United States)</x:String>
                <x:String>Greek (word "Greek" in Greek)</x:String>
                <x:String>Polish (Polski)</x:String>
            </ComboBox>
            <controls:SettingsExpander.Items>
                <controls:SettingsCard Header="Translation author" />
            </controls:SettingsExpander.Items>
        </controls:SettingsExpander>
        <controls:SettingsCard HeaderIcon="{ui:FontIcon Glyph=&#xE7E8;}" Header="Startup page" Description="Change the page to display at startup">
            <ComboBox x:Name="startupPage">
                <x:String>About</x:String>
                <x:String>Your PC</x:String>
                <x:String>Users</x:String>
                <x:String>Storage</x:String>
                <ComboBoxItem x:Name="wipItem" Content="Insider" Visibility="Collapsed" />
            </ComboBox>
        </controls:SettingsCard>
        <controls:SettingsCard HeaderIcon="{ui:FontIcon Glyph=&#xE727;}" Header="Backdrop" Description="Change the material shown as the window backdrop">
            <ComboBox x:Name="backdrop" ItemsSource="{x:Bind backdrops}" />
        </controls:SettingsCard>
        <controls:SettingsExpander HeaderIcon="{ui:BitmapIcon Source=ms-appx:///Assets/StoreLogo.png}" Header="Fluver" Description="Version 1.1">
            <controls:SettingsExpander.Items>
                <controls:SettingsCard>
                    <HyperlinkButton Content="What's new" NavigateUri="https://github.com/Tech5G5G/Fluentver/releases/tag/v1.1" />
                </controls:SettingsCard>
                <controls:SettingsCard>
                    <HyperlinkButton Content="GitHub page" NavigateUri="https://github.com/Tech5G5G/Fluentver" />
                </controls:SettingsCard>
                <controls:SettingsCard>
                    <HyperlinkButton Content="MIT License" NavigateUri="https://raw.githubusercontent.com/Tech5G5G/Fluentver/refs/heads/master/LICENSE" />
                </controls:SettingsCard>
            </controls:SettingsExpander.Items>
        </controls:SettingsExpander>
        <StackPanel.ChildrenTransitions>
            <TransitionCollection>
                <RepositionThemeTransition IsStaggeringEnabled="False" />
            </TransitionCollection>
        </StackPanel.ChildrenTransitions>
    </StackPanel>
</Page>
